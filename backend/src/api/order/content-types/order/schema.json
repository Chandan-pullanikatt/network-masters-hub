{
    "kind": "collectionType",
    "collectionName": "orders",
    "info": {
        "singularName": "order",
        "pluralName": "orders",
        "displayName": "Order",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "customerName": {
            "type": "string"
        },
        "email": {
            "type": "email"
        },
        "phone": {
            "type": "string"
        },
        "courses": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::course.course"
        },
        "totalAmount": {
            "type": "decimal"
        },
        "paymentStatus": {
            "type": "enumeration",
            "enum": [
                "pending",
                "paid",
                "rejected"
            ],
            "default": "pending"
        },
        "paymentMethod": {
            "type": "enumeration",
            "enum": [
                "razorpay",
                "manual"
            ],
            "default": "manual"
        },
        "razorpayPaymentId": {
            "type": "string"
        },
        "paymentScreenshot": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        }
    }
}